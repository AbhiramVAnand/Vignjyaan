<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DepartmentFragment"
    android:background="@drawable/main">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/deptback"
            android:orientation="vertical"
            android:paddingBottom="20sp">
            <ImageView
                android:layout_marginTop="20sp"
                android:layout_width="match_parent"
                android:layout_height="180sp"
                android:src="@drawable/ecelogo"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Department of Electronics And Communication Engineering"
                android:textSize="16sp"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:fontFamily="@font/poppins_semibold"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_marginTop="10sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Year Of Starting - 1999"
                android:textSize="12sp"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:fontFamily="@font/poppins"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="30sp"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Head of the Department"
            android:textSize="14sp"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:fontFamily="@font/poppins_semibold"
            android:textAlignment="center"
            android:textColor="@color/purpD"
            android:layout_marginTop="10sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dr. Bindu P"
            android:textSize="16sp"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:fontFamily="@font/poppins_semibold"
            android:textAlignment="center"
            android:textColor="@color/black_light"
            android:layout_marginTop="2sp"/>
        <TextView
            android:id="@+id/mailhod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="bindup@gecskp.ac.in"
            android:textSize="12sp"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:fontFamily="@font/poppins"
            android:textAlignment="center"
            android:textColor="@color/link" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="9497128298"
            android:textSize="12sp"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:fontFamily="@font/poppins"
            android:textAlignment="center"
            android:textColor="@color/black_light"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vision"
            android:textSize="18sp"
            android:background="@drawable/mybutton"
            android:backgroundTint="@color/textback"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginLeft="35sp"
            android:layout_marginRight="35sp"
            android:paddingTop="8sp"
            android:paddingBottom="8sp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/white"
            android:layout_marginTop="10sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25sp"
            android:layout_marginRight="25sp"
            android:paddingTop="8sp"
            android:paddingBottom="8sp"
            android:textAlignment="center"
            android:text="@string/vision"
            android:fontFamily="@font/poppins"
            android:textColor="@color/blur"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mission"
            android:textSize="18sp"
            android:background="@drawable/mybutton"
            android:backgroundTint="@color/textback"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginLeft="35sp"
            android:layout_marginRight="35sp"
            android:paddingTop="8sp"
            android:paddingBottom="8sp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/white"
            android:layout_marginTop="10sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35sp"
            android:layout_marginRight="35sp"
            android:paddingTop="8sp"
            android:paddingBottom="8sp"
            android:text="@string/mission"
            android:textAlignment="center"
            android:fontFamily="@font/poppins"
            android:textColor="@color/blur"
            />
        <LinearLayout
            android:id="@+id/faculty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="8sp"
            android:paddingBottom="8sp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="20sp"
            android:layout_marginLeft="35sp"
            android:layout_marginRight="35sp"
            android:background="@drawable/mybutton"
            android:backgroundTint="@color/textback">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/faculty"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Faculties"
                android:textSize="12sp"
                android:layout_marginLeft="10sp"
                android:fontFamily="@font/poppins"
                android:textAlignment="center"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>