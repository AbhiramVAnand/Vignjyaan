<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".ModulesFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="18sp">

        <ImageView
            android:id="@+id/backmod"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.043"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.046"
            android:layout_width="46dp"
            android:layout_height="49dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel" />


        <Button
            android:id="@+id/mod1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32sp"
            android:layout_marginTop="50sp"
            android:layout_marginRight="32sp"
            android:background="@drawable/category"
            android:padding="10sp"
            android:text="Module 1"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/backmod"
            app:layout_constraintVertical_bias="0.062" />

        <Button
            android:id="@+id/mod2"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32sp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="32sp"
            android:background="@drawable/category"
            android:padding="10sp"
            android:text="Module 2"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mod1"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/mod3"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32sp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="32sp"
            android:background="@drawable/category"
            android:padding="10sp"
            android:text="Module 3"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mod2"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/mod4"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32sp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="32sp"
            android:background="@drawable/category"
            android:padding="10sp"
            android:text="Module 4"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mod3"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/mod5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32sp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="32sp"
            android:background="@drawable/category"
            android:padding="10sp"
            android:text="Module 5"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mod4"
            app:layout_constraintVertical_bias="0.061" />

        <Button
            android:id="@+id/oth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32sp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="32sp"
            android:background="@drawable/category"
            android:padding="10sp"
            android:text="Others"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mod5" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>